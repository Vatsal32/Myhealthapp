<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainFragOne"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#233148"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:text="@string/logTitle"
        android:gravity="center"
        android:background="#1C1E29"
        android:textColor="#4F9AFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0sp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bFast"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="10sp"
                android:layout_weight="1"
                android:backgroundTint="#151724"
                app:cornerRadius="20sp"
                android:textColor="@color/white"
                android:text="@string/bFast" />

            <com.google.android.material.button.MaterialButton

            android:id="@+id/lunch"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="20sp"
                android:layout_weight="1"
                android:text="@string/lun"
                android:backgroundTint="#151724"
                android:textColor="@color/white"
                app:cornerRadius="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dinner"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="10sp"
                android:layout_weight="1"
                android:backgroundTint="#151724"
                app:cornerRadius="20sp"
                android:textColor="@color/white"
                android:text="@string/din" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/miscellaneous"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="20sp"
                android:layout_weight="1"
                android:backgroundTint="#151724"
                app:cornerRadius="20sp"
                android:textColor="@color/white"
                android:text="@string/misc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0sp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>